@using Seldino.CrossCutting.Web.ViewMessages
@{
    Layout = "~/Views/Shared/_ErrorPageLayout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    <i class="zmdi zmdi-mood-bad zmdi-hc-5x"></i>
                </h1>
                <h2>
                    403
                </h2>
                <div class="error-details">
                    @CommonViewMessage.ForbiddenMessage
                </div>
                <div class="error-actions">
                    <a class="btn btn-info btn-lg" href="@Url.Action("Index", "Home", new { area = "" })"><i class="zmdi zmdi-home zmdi-hc-2x"></i>&nbsp;&nbsp;@CommonViewMessage.Home</a>
                    <a class="btn btn-default btn-lg" href="#"><i class="zmdi zmdi-email zmdi-hc-2x"></i>&nbsp;&nbsp;@DocumentViewMessage.Support</a>
                </div>
            </div>
        </div>
    </div>
</div>
