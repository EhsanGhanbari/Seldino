@model Seldino.Application.Command.MembershipHandler.SendPasswordRecoveryLinkCommand
@using Seldino.CrossCutting.Web.ViewMessages

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container on-banner">

    <div class="section-header">
        <h2>رمز عبورم را فراموش کردم!</h2>
        <span><i class="fa fa-key"></i></span>
    </div>

    <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-md-6 col-md-offset-3 col-xs-12">
        <form class="forgot-pass-form">
            <div class="form-group">
                <label for="Email">ایمیل خود را وارد نمایید</label>
                @Html.TextBoxFor(model => model.Email, new {@class = "form-control text-center", lang = "en", id = "Email", autocomplete = "off"})
                @Html.ValidationMessageFor(model => model.Email)
            </div>

            <button type="button" class="btn btn-primary btn-block btn-lg">
                بازیابی رمز عبور
            </button>
            <br />
            <a href="@Url.Action("Index", "Home", new {area = ""})" class="btn btn-link pull-left">
                <small>بازگشت به فروشگاه</small>
            </a>
            
            <a href="@Url.Action("Register", "Account", new {area = ""})" class="btn btn-link pull-right">
                <small> ثبت نام در کادوبین</small>
            </a>
            <a href="@Url.Action("SignIn", "Account", new {area = ""})" class="btn btn-link pull-right">
                <small>ورود به کادوبین</small>
            </a>
        </form>
    </div>
</div>
<div class="clearfix"></div>
