@using Seldino.CrossCutting.Web.ViewMessages
@model Seldino.Application.Command.MembershipHandler.RegisterUserCommand

<div class="container on-banner">

    <div class="section-header">
        <h2>ثبت نام در کادوبین</h2>
        <span><i class="fa fa-user-plus"></i></span>
    </div>

    <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-md-6 col-md-offset-3 col-xs-12">

        <form class="register-form">
            <div class="form-group">
                <label for="email">ایمیل خود را وارد نمایید</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control text-center", lang = "en", id = "email", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-group">
                <label for="password">رمز عبور خود را وارد نمایید</label>
                @Html.PasswordFor(model => model.Password, new { @class = "form-control text-center", lang = "en", id = "password", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="form-group">
                <label for="confirmPassword">رمز عبور را تکرار نمایید</label>
                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control text-center", lang = "en", id = "confirmPassword", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>

            <button type="button" class="btn btn-primary btn-block btn-lg register">
                @CommonViewMessage.Register
            </button>
            <br />
            <br />
            <a href="@Url.Action("Index", "Home", new {area = ""})" class="btn btn-link pull-left">
                <small>بازگشت به فروشگاه</small>
            </a>

            <a href="@Url.Action("ForgotPassword", "Account", new {area = ""})" class="btn btn-link pull-right">
                <small> فراموشی رمز عبور</small>
            </a>
            <a href="@Url.Action("SignIn", "Account", new {area = ""})" class="btn btn-link pull-right">
                <small>ورود به کادوبین</small>
            </a>

        </form>
    </div>
</div>
<div class="clearfix"></div>