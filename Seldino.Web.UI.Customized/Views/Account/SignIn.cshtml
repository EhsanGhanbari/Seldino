@model Seldino.Application.Query.MembershipService.AuthenticateQueryRequest
@using Seldino.CrossCutting.Web.ViewMessages

<div class="container on-banner">

    <div class="section-header">
        <h2>ورود به کادوبین</h2>
        <span><i class="fa fa-user-plus"></i></span>
    </div>


    <div class="col-lg-6">
        <fieldset>
            <div class="page-header">
                <b>حساب کاربری</b>
            </div>
            <div class="clearfix"></div>
            @if (!User.Identity.IsAuthenticated)
            {
                <form class="login-form">
                    @Html.Hidden("ReturnUrl", (string) ViewBag.ReturnUrl)
                    <div class="form-group">
                        <label for="email">پست الکترونیک</label>
                        @Html.TextBoxFor(model => model.Email, new {@class = "form-control text-center", id = "email", lang = "en", autocomplete = "off"})
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                    <div class="form-group">
                        <label for="password">رمز عبور خود را وارد نمایید</label>
                        @Html.PasswordFor(model => model.Password, new {@class = "form-control text-center", id = "password", lang = "en", autocomplete = "off"})
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>

                    <div class="form-group">
                        <input id="rememberMe" name="RememberMe" type="checkbox">
                        <label for="rememberMe">مرا بخاطر بسپار</label>
                    </div>

                    <br/>

                    <button type="button" class="btn btn-primary" data-login>
                        <b>ورود به کادوبین</b>
                    </button>
                </form>
            }
            else
            {
                <div class="alert alert-info">
                    حساب کاربری شما در حال استفاده میباشد، جهت خروج بر روی کلید زیر کلیک نمایید
                </div>
                <a href="/Account/SignOut" class="btn-floating waves-effect waves-light red sign-out">
                    <i class="fa fa-times"></i>
                </a>
            }
        </fieldset>
    </div>

    <div class="col-lg-6">
            <div class="page-header">
                <b>ثبت نام در کادوبین</b>
            </div>
            <div class="clearfix"></div>

            <b>
                با ایجاد حساب کاربری در کادوبین شما میتوانید
                کلیه سوابق سفارشات خود را مشاهده نمایید و همچنین از پنل مدیریتی کادوبین استفاده نمایید.
            </b>

            <div class="clearfix"></div><br/><br/>

            <small>
                @Ajax.ActionLink(CommonViewMessage.ForgetPassword, "ForgotPassword", "Account", null)
            </small>

            <div class="clearfix"></div><br/>

            <a href="@Url.Action("Register", "Account", new {area = ""})" class="btn btn-primary iconable waves-effect waves-light">
                <i class="fa fa-user"></i>
                <b>ایجاد حساب کاربری در فروشگاه</b>
            </a>

            <div class="clearfix"></div><br/>

            <div class="page-header">
                <b>ادامه به عنوان مهمان</b>
            </div>

            <a href="@Url.Action("Index", "Home", new {area = ""})" class="btn btn-default waves-effect waves-light">
                ادامه خرید به عنوان مهمان
            </a>

    </div>
</div>

<div class="clearfix"></div>