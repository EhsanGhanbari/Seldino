@{
    var actionName = ViewContext.Controller.ValueProvider.GetValue("action").RawValue;
    var controllerName = ViewContext.Controller.ValueProvider.GetValue("controller").RawValue;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>@ViewBag.Title</title>

    @System.Web.Optimization.Styles.Render("~/Content/leoStyle")

    @System.Web.Optimization.Scripts.Render("~/bundles/leoJQuery")
</head>
<body>
    @Html.Partial("Partials/Header")

    <div class="clearfix"></div>
    @if ((string)controllerName == "Home" && (string)actionName == "index")
    {
        @Html.Action("Sliders", "Banner", new { area = "" })
    }
    else
    {
        <div class="fix-banner-border-top"></div>
        <div class="fix-banner"></div>
        <div class="fix-banner-border-bottom"></div>
    }



@Html.Action("SocialMedia", "Home", new { area = "" })

<div class="clearfix"></div>

    <div class="dynamic-divader"></div>

    <div class="clearfix"></div>

    @RenderBody()

    <div class="clearfix"></div>

    @Html.Partial("Partials/Footer")

    <!-- Sidebar navigation -->
    <div class="side-nav hidden-xs" data-side="right">
        <div class="nav-side-header">
            <img src="~/Content/Images/logo.png" />
        </div>

        <div class="nav-side-content en">

            <div class="text-center">
                <i class="fa fa-instagram fa-5x"></i>

                <h4>#Kadobin</h4>

                <hr />

                <button class="btn btn-default">
                    <i class="fa fa-facebook"></i>
                </button>
                <button class="btn btn-default">
                    <i class="fa fa-twitter"></i>
                </button>
                <button class="btn btn-default">
                    <i class="fa fa-instagram"></i>
                </button>
                <button class="btn btn-default">
                    <i class="fa fa-youtube"></i>
                </button>
                <button class="btn btn-default">
                    <i class="fa fa-google-plus"></i>
                </button>
            </div>

        </div>

        <div class="nav-side-footer">
            فروشگاه کادوبین
        </div>
    </div>
    <!--/. Sidebar navigation -->

    @System.Web.Optimization.Scripts.Render("~/bundles/leoScripts")
    @RenderSection("scripts", false)
</body>
</html>
