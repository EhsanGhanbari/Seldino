@model Seldino.Application.Query.MembershipService.AuthenticateQueryRequest
    @using Seldino.CrossCutting.Web.ViewMessages
    @{
        ViewBag.Title = "SignIn";
        Layout = "~/Views/Shared/_LoginLayout.cshtml";
    }
    <div class="text-center" style="margin: auto; position: relative; top: -50px;">
        <div class="logo">@CommonViewMessage.AdminSignin</div>
        <div class="login-form-1">
            @using (Html.BeginForm("Signin", "Account", FormMethod.Post))
            {
                <div class="login-form-main-message"></div>
                <div class="main-login-form">
                    <div class="login-group">
                        <div class="form-group">
                            <label for="Email" class="sr-only">@CommonViewMessage.Email</label>
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = CommonViewMessage.Email, lang = "en" })

                        </div>
                        <div class="form-group">
                            <label for="Password" class="sr-only">@CommonViewMessage.Password</label>
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = CommonViewMessage.Password, lang = "en" })
                        </div>
                    </div>
                    <button type="submit" class="login-button"><i class="icon-chevron-left"></i></button>
                </div>
            }
        </div>
        @Html.ValidationMessageFor(c => c.Email)
        @Html.ValidationMessageFor(c => c.Password)
        @Html.ValidationSummary(true)
    </div>
    @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")

